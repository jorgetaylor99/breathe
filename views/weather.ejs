<!DOCTYPE html>
<html lang="en">
  <%- include ('partials/head.ejs') %>
  <body>
    <%- include ('partials/navbar.ejs') %>

    <div class="center-container mt-3">
      <div class="row weather-container">
        <div class="col-lg-12">
          <div class="card p-4 mb-4 shadow-lg">
            <h4 class="card-title mb-3">Current Weather</h4>
            <div class="row">
              <div class="col-sm-6">
                <p class="lead card-subtitle opacity-75">Sheffield</p>
                <div class="d-flex align-items-center">
                  <img
                    class="wi-icon"
                    src="<%= getWeatherIconPath(formattedData.current.weathercode) %>"
                    alt
                  />
                  <h1 class="display-3 px-2">
                    <%= formattedData.current.temperature %>째C
                  </h1>
                </div>
              </div>
              <div class="col-sm-6">
                <p class="card-text lead">
                  Feels like <%= formattedData.current.apparentTemperature %>째C
                </p>
                <p class="card-text">
                  <i class="bi bi-cloud-drizzle px-2"></i>
                  Precipitation <%=
                  formattedData.current.precipitationProbability %>%
                </p>
                <p class="card-text">
                  <i class="bi bi-moisture px-2"></i>
                  Humidity <%= formattedData.current.humidity %>%
                </p>
                <p class="card-text">
                  <i class="bi bi-wind px-2"></i>
                  Wind <%= formattedData.current.windspeed %> mph
                </p>
              </div>
            </div>
          </div>

          <div class="card p-4 shadow-lg">
            <h4 class="card-title mb-4">Extended Forecast</h4>
            <div class="row">
              <% formattedData.daily.forEach((dayData) => { %>
              <div
                class="col-md-2 d-flex flex-column align-items-center text-center"
              >
                <h5><%= getDayOfWeek(dayData.date) %></h5>
                <img
                  class="wi-icon-small"
                  src="<%= getWeatherIconPath(dayData.weathercode) %>"
                  alt
                />
                <p>
                  <%= dayData.maxTemp %>째 /
                  <span class="opacity-75"><%= dayData.minTemp %>째</span>
                </p>
                <!-- <p><%= dayData.weathercode %></p> -->
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script type="module" src="/javascripts/weather.js"></script>
  </body>
</html>
