<!DOCTYPE html>
<html lang="en">
  <%- include ('partials/head.ejs') %>
  <body>
    <%- include ('partials/navbar.ejs') %>

    <div class="center-container mt-3">
      <div class="row weather-container">
        <div class="col-lg-12">
          <div class="card p-4 mb-4 shadow-lg">
            <h4 class="card-title mb-3">Current Weather & Air Quality</h4>
            <div class="row">
              <div class="col-lg-5">
                <p class="lead card-subtitle opacity-75">Sheffield</p>
                <div class="d-flex align-items-center">
                  <img
                    class="wi-icon"
                    src="<%= getWeatherIconPath(data.current.weathercode) %>"
                    alt
                  />
                  <h1 class="display-3 px-2">
                    <%= data.current.temperature %>°C
                  </h1>
                </div>
                <div class="d-flex justify-content-around">
                  <p class="card-text lead">
                    PM10 <%= data.current.pm10 %>μg/m³
                  </p>
                  <p class="card-text lead">
                    PM2.5 <%= data.current.pm2_5 %>μg/m³
                  </p>
                </div>
              </div>
              <div class="col-sm-3">
                <p class="card-text">
                  Feels like <%= data.current.apparentTemperature %>°C
                </p>
                <p class="card-text">
                  <i class="bi bi-cloud-drizzle px-2"></i>
                  Precipitation <%= data.current.precipitationProbability %>%
                </p>
                <p class="card-text">
                  <i class="bi bi-moisture px-2"></i>
                  Humidity <%= data.current.humidity %>%
                </p>
                <p class="card-text">
                  <i class="bi bi-wind px-2"></i>
                  Wind <%= data.current.windspeed %> mph
                </p>
              </div>
              <div class="col-sm-3">
                <p class="card-text">
                  Carbon monoxide <%= data.current.carbon_monoxide %>μg/m³
                </p>
                <p class="card-text">
                  Nitrogen dioxide <%= data.current.nitrogen_dioxide %>μg/m³
                </p>
                <p class="card-text">
                  Sulphur dioxide <%= data.current.sulphur_dioxide %>μg/m³
                </p>
                <p class="card-text">Ozone <%= data.current.ozone %>μg/m³</p>
              </div>
            </div>
          </div>

          <div class="card p-4 shadow-lg">
            <h4 class="card-title mb-4">Extended Forecast</h4>
            <div class="row">
              <% data.daily.forEach((dayData) => { %>
              <div
                class="col-md-2 d-flex flex-column align-items-center text-center"
              >
                <h5><%= getDayOfWeek(dayData.date) %></h5>
                <img
                  class="wi-icon-small"
                  src="<%= getWeatherIconPath(dayData.weathercode) %>"
                  alt
                />
                <p>
                  <%= dayData.maxTemp %>° /
                  <span class="opacity-75"><%= dayData.minTemp %>°</span>
                </p>
                <!-- <p><%= dayData.weathercode %></p> -->
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script type="module" src="/javascripts/weather.js"></script>
  </body>
</html>
